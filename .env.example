# /var/www/nomadnet-ecommerce/.env.example

# =============================================================================
# NOMADNET ECOMMERCE ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values

# Stripe Configuration (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Database Configuration (Supabase PostgreSQL recommended)
# Example: postgresql://username:password@host:5432/database
DATABASE_URL="postgresql://username:password@host:5432/nomadnet_db?schema=public"

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG...
FROM_EMAIL=orders@nomadnet.com
SUPPORT_EMAIL=support@nomadnet.com

# Product Configuration
ROUTER_X2000_PRICE_ID=price_...  # Stripe Price ID for X2000 router
ROUTER_X3000_PRICE_ID=price_...  # Stripe Price ID for X3000 router
DATA_PLAN_PRICE_ID=price_...     # Stripe Price ID for unlimited data plan

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=0  # Free shipping for all orders
SHIPPING_RATE_ID=shr_...   # Stripe shipping rate ID

# Security
NEXTAUTH_SECRET=your-super-secret-jwt-secret-here
NEXTAUTH_URL=http://localhost:3000

# Development/Production Settings
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-...
FACEBOOK_PIXEL_ID=...

# Customer Support
SUPPORT_PHONE=1-800-NOMADNET
SUPPORT_HOURS="Mon-Fri 9AM-6PM EST"

# Social Media Links
TWITTER_URL=https://twitter.com/nomadnet
FACEBOOK_URL=https://facebook.com/nomadnet
INSTAGRAM_URL=https://instagram.com/nomadnet

# Company Information
COMPANY_NAME="NomadNet"
COMPANY_ADDRESS="123 Tech Street, Austin, TX 78701"
COMPANY_PHONE="1-800-NOMADNET"

# Legal Pages
TERMS_URL=/terms
PRIVACY_URL=/privacy
REFUND_URL=/refund-policy

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
ENABLE_PROMOTIONS=true
ENABLE_REVIEWS=false
ENABLE_CHAT_SUPPORT=false

# =============================================================================
# PRODUCTION ENVIRONMENT ADDITIONS
# =============================================================================
# Additional variables needed for production deployment

# SSL/TLS (Production only)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# CDN Configuration (Production)
# NEXT_PUBLIC_CDN_URL=https://cdn.nomadnet.com
# CLOUDFLARE_API_TOKEN=...
# AWS_S3_BUCKET=nomadnet-assets

# Monitoring & Logging (Production)
# SENTRY_DSN=https://...
# LOGFLARE_API_KEY=...
# NEW_RELIC_LICENSE_KEY=...

# Caching (Production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=...

# Rate Limiting (Production)
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000

# Database Backup (Production)
# DATABASE_BACKUP_URL=...
# BACKUP_SCHEDULE="0 2 * * *"